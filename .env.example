# Database
DATABASE_URL=postgresql://postgres:postgres123@localhost:5432/postgres

# JWT Secrets (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your-super-secret-key-change-this-in-production-min-32-characters-long
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-refresh-secret-key-change-this-in-production-min-32-characters-long
JWT_REFRESH_EXPIRES_IN=7d

# Application
NODE_ENV=development
PORT=3000

# Security
BCRYPT_SALT_ROUNDS=10
THROTTLE_TTL=60000
THROTTLE_LIMIT=10

# CORS (프로덕션에서만 사용, 쉼표로 구분)
# CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com
